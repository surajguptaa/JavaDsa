import java.io.*;
import java.util.*;

public class Solution {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String str = sc.next();
        Stack<Character>stk = new Stack<>();
        for(int i=0;i<str.length();i++){
            stk.push(str.charAt(i));
        }
        String res = "";
            while(!stk.isEmpty()){
                res += stk.pop();
            }
            
            System.out.print(res);
    }
}
